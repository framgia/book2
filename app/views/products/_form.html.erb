<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>画像</th>
      <th>タイトル</th>
      <th>ISBN</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <%= link_to image_tag(@m_book.book_image_path), "http://www.amazon.co.jp/dp/" + @m_book.isbn, target: ["_blank"] %>
      </td>
      <td><%= @m_book.name %></td>
      <td><%= @m_book.isbn%></td>
    </tr>
  </tbody>
</table>

  <%= f.hidden_field :m_book_id, value: @m_book.id %>

  <div class="field">
    <%= f.label "購入日" %><br>
    <%= f.date_select :purchase_date, use_month_numbers: true %>
  </div>
  <div class="field">
    <%= f.label "保管場所" %><br>
    <%= f.collection_select(:m_branch_id, M::Branch.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label "価格" %><br>
    <%= f.number_field :price %>
  </div>
  <div class="action">
    <%= f.submit "購入", class: "btn btn-primary purchase-btn" %>
  </div>
<% end %>
